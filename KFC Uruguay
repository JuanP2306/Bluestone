                data: [7.10, 7.08, 6.47, 6.33, 6.03, 5.95, 1.72],
                backgroundColor: ['#3357FF', '#3357FF', '#3357FF', '#3357FF', '#3357FF', '#3357FF', '#FF5733'],
                borderWidth: 0
            }]
        };

        new Chart(document.getElementById('competitivenessChart'), {
            type: 'bar',
            data: competitivenessData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: { x: { beginAtZero: true, title: { display: true, text: 'Puntuaci√≥n de Competitividad (0-10)' } } },
                plugins: { legend: { display: false }, tooltip: { callbacks: { title: tooltipTitleCallback } } }
            }
        });

        const radarData = {
            labels: ['Precio', 'Tiempo Espera', 'Cobertura', 'Calidad Percibida', 'Variedad Men√∫'],
