    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const consumerData = {
            labels: ['Tiempos Espera', 'Precios', 'Exp. General', 'Calidad Prod.', 'Menu/Variedad', 'Disponib/Acceso', 'vs Competencia', 'Serv. Cliente'],
            datasets: [{
                label: 'Score Cr√≠tico (Mayor es Peor)',
                data: [8.1, 6.8, 5.2, 4.9, 4.5, 4.2, 3.3, 2.7],
                backgroundColor: [
                    '#FF5733', '#FF5733',
                    '#FFC300', '#FFC300', '#FFC300',
                    '#33FF57', '#33FF57', '#33FF57'
                ],
                borderWidth: 0
            }]
        };

        new Chart(document.getElementById('consumerDiagnosisChart'), {
            type: 'bar',
            data: consumerData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: { x: { beginAtZero: true, title: { display: true, text: 'Nivel de Criticidad (0-10)' } } },
                plugins: { legend: { display: false }, tooltip: { callbacks: { title: tooltipTitleCallback } } }
            }
        });

        const competitivenessData = {
            labels: ['Burger King', 'Subway', 'McDonald\'s', 'Mostaza', 'La Pasiva', 'Pizza Hut', 'KFC'],
            datasets: [{
